<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="scu.miomin.com.shareward">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".core.ShareApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".splash.SplashActivity"
            android:launchMode="singleTask"
            android:theme="@android:style/Theme.Translucent.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".sample.activity.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".home.HomeActivity"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".sample.index.ShareIndexActivity" />
        </activity>

        <activity
            android:name=".home.HomePagerActivity"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".sample.index.ShareIndexActivity" />
        </activity>

        <activity
            android:name=".sample.activity.SampleTabActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".sample.index.ShareIndexActivity" />
        </activity>

        <activity
            android:name=".sample.recyclerview.SampleListSplashActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".sample.index.ShareIndexActivity" />
        </activity>

        <activity
            android:name=".sample.recyclerview.SampleChatActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".sample.index.ShareIndexActivity" />
        </activity>

        <activity
            android:name=".sample.recyclerview.SampleRecyclerViewActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".sample.index.ShareIndexActivity" />
        </activity>

        <activity
            android:name=".sample.recyclerview.SampleSectionRvActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".sample.index.ShareIndexActivity" />
        </activity>

        <activity
            android:name=".sample.index.ShareIndexActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

    </application>

</manifest>