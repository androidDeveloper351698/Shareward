<?xml version="1.0" encoding="utf-8"?>
<com.scu.miomin.shswiperefresh.core.SHSwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_retrofit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:guidance_view_bg_color="@color/bg_color"
    tools:context="scu.miomin.com.shareward.activity.rxjavamvp.retrofit.view.impl.DBTopMovieActivity">

    <com.scu.miomin.shswiperefresh.view.ShareScrollView
        android:background="@color/bg_color"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="64dp"
                android:layout_marginRight="64dp"
                android:layout_marginTop="32dp"
                android:padding="6dp"
                android:text="Click" />

            <TextView
                android:id="@+id/tv_result"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                android:padding="16dp" />

        </LinearLayout>

    </com.scu.miomin.shswiperefresh.view.ShareScrollView>

</com.scu.miomin.shswiperefresh.core.SHSwipeRefreshLayout>
